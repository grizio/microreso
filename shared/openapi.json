{
  "openapi": "3.0.0",
  "info": {
    "title": "Microreso",
    "description": "Microreso",
    "version": "0.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:9800",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/organisation": {
      "post": {
        "operationId": "createOrganisation",
        "x-jvm-package": "organisation",
        "description": "Create the organisation",
        "requestBody": {
          "$ref": "#/components/requestBodies/Initialize"
        },
        "responses": {
          "200": {
            "description": "Organisation created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organisation"
                }
              }
            }
          },
          "400": {
            "description": "Issue with given body",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "requestBodies": {
      "Initialize": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Initialize"
            }
          }
        }
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Initialize": {
        "type": "object",
        "required": [
          "code",
          "name"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Organisation": {
        "type": "object",
        "required": [
          "code",
          "name"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
